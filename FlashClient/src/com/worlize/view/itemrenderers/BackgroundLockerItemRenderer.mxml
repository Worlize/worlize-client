				return _data;
			}
			
			/**
			 *  @private
			 */
			override public function set data(value:Object):void
			{
				_data = value;
				if (_data && _data.emptySpace) {
					this.enabled = false;
					this.currentState = "emptySpace";
				}
				else {
					this.enabled = true;
