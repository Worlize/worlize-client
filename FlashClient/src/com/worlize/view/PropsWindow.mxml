				uploader="{propUploader}" />
			
			<mx:LinkButton
				id="uploadButton"
				click="uploadProp()"
				enabled="{propUploader.state === Uploader.STATE_READY &amp;&amp; propLocker.state === PropLocker.STATE_READY}"
